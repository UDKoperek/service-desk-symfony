<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav style="padding: 10px; background-color: #f8f8f8; border-bottom: 1px solid #eee; display: flex; justify-content: space-between;">
            <div class="nav-links">
                <a href="{{ path('app_ticket_index') }}" style="margin-right: 20px; text-decoration: none; color: #333;">üè† Home / Moje Bilety</a>
                
                {% if app.user %}
                    <a href="{{ path('app_ticket_new') }}" style="text-decoration: none; color: #007bff;">‚ûï Nowy Bilet</a>
                {% endif %}
            </div>

            <div class="user-actions">
                {% if app.user %}
                    {# U≈ºytkownik ZALOGOWANY: Poprawnie wy≈õwietla Witaj i formularz Wyloguj #}
                    <span style="margin-right: 15px; color: #5cb85c; font-weight: bold;">
                        Witaj, {{ app.user.username }}!
                    </span> 
                    
                    <form method="post" action="{{ path('app_logout') }}" style="display: inline-block;">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}"> 
                        
                        <button type="submit" class="btn btn-danger">
                            Wyloguj
                        </button>
                    </form>
                {% else %}
                    {# U≈ºytkownik WYLOGOWANY #}

                    {# 1. UKRYTY FORMULARZ LOGOWANIA #}
                    <form action="{{ path('app_login') }}" method="POST" id="login-form" style="display: none;">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('login') }}">
                        {# W tym formularzu nie musisz mieƒá przycisku, bo i tak jest ukryty #}
                    </form>
                    
                    {# 2. UKRYTY FORMULARZ REJESTRACJI (Naprawione ID i token) #}
                    <form action="{{ path('app_register') }}" method="POST" id="register-form" style="display: none;"> 
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}"> 
                        {# W tym formularzu nie musisz mieƒá przycisku, bo i tak jest ukryty #}
                    </form>
                    
                    {# 3. WIDOCZNE PRZYCISKI AKTYWUJƒÑCE FORMULARZE #}
                    
                    <button 
                        type="button" 
                        class="btn btn-primary" 
                        onclick="document.getElementById('login-form').submit();"
                    >
                        Zaloguj
                    </button>
                    
                    <button 
                        type="button" 
                        class="btn btn-success" 
                        onclick="document.getElementById('register-form').submit();"
                    >
                        Zarejestruj
                    </button>

                {% endif %}
            </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
